<Page x:Class="Metro.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Metro"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Выберите таблицу" FontSize="30" Margin="10"/>
            <Button Content="Станции" Margin="10" FontSize="20" Click="OpenStations"/>
            <Button Content="Линии" Margin="10" FontSize="20" Click="OpenLines"/>
            <Button Content="Прекращения движений" Margin="10" FontSize="20" Click="OpenStops"/>
        </StackPanel>
    </Grid>
</Page>
